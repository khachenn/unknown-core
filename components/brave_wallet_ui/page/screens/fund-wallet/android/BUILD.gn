import("//unknown/components/brave_wallet/common/buildflags/buildflags.gni")

assert(enable_brave_wallet)
import("//unknown/components/common/typescript.gni")
import("//chrome/common/features.gni")
import("//mojo/public/tools/bindings/mojom.gni")

transpile_web_ui("brave_wallet_deposit_page_ui") {
  output_module = false
  entry_points = [ [
        "brave_wallet_deposit_page",
        rebase_path("deposit-funds.tsx"),
      ] ]
  resource_name = "brave_wallet_deposit_page"
  deps = [
    "//unknown/components/brave_wallet/common:mojom_js",
    "//unknown/components/brave_wallet/common:preprocess_mojo",
  ]
  imports_from = [
    "//unknown/components/brave_wallet_ui/",
    "//unknown/components/brave_rewards/resources/rewards_page/",
    "//unknown/components/",
  ]
}

pack_web_resources("brave_wallet_deposit_page_generated") {
  resource_name = "brave_wallet_deposit_page"
  output_dir = "$root_gen_dir/unknown/components/brave_wallet_page/resources"
  deps = [ ":brave_wallet_deposit_page_ui" ]
}
