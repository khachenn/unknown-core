import("//unknown/components/brave_wallet/common/buildflags/buildflags.gni")

if (!is_android) {
  source_set("browser_tests") {
    testonly = true
    defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

    sources = [
      "google_sign_in_permission_browsertest.cc",
      "localhost_access_permission_browsertest.cc",
      "mock_permission_lifetime_prompt.cc",
      "mock_permission_lifetime_prompt.h",
      "mock_permission_lifetime_prompt_factory.cc",
      "mock_permission_lifetime_prompt_factory.h",
      "permission_lifetime_manager_browsertest.cc",
      "permission_manager_browsertest.cc",
    ]

    deps = [
      "//unknown/browser",
      "//unknown/components/brave_component_updater/browser",
      "//unknown/components/brave_shields/content/browser",
      "//unknown/components/brave_shields/content/test:test_support",
      "//unknown/components/brave_shields/core/browser",
      "//unknown/components/brave_shields/core/common",
      "//unknown/components/brave_wallet/common/buildflags",
      "//unknown/components/ephemeral_storage",
      "//unknown/components/google_sign_in_permission",
      "//chrome/browser",
      "//chrome/browser/content_settings:content_settings_factory",
      "//chrome/browser/permissions",
      "//chrome/browser/ui",
      "//chrome/test:test_support",
      "//chrome/test:test_support_ui",
      "//components/permissions",
      "//content/test:test_support",
    ]

    if (enable_brave_wallet) {
      sources += [ "brave_wallet_permission_context_browsertest.cc" ]
      deps += [
        "//unknown/browser/brave_wallet",
        "//unknown/components/brave_wallet/browser",
        "//unknown/components/brave_wallet/browser:permission_utils",
        "//unknown/components/brave_wallet/common",
      ]
    }
  }
}

source_set("unit_tests") {
  testonly = true
  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  sources = [ "permission_lifetime_manager_unittest.cc" ]

  deps = [
    "//chrome/browser",
    "//chrome/browser/content_settings:content_settings_factory",
    "//chrome/browser/permissions",
    "//chrome/test:test_support",
    "//components/content_settings/core/browser",
    "//components/permissions",
    "//components/pref_registry",
    "//components/sync_preferences:test_support",
    "//content/test:test_support",
    "//testing/gtest",
  ]

  if (enable_brave_wallet) {
    sources += [ "brave_wallet_permission_context_unittest.cc" ]
    deps += [ "//unknown/components/brave_wallet/browser:permission_utils" ]
  }
}
