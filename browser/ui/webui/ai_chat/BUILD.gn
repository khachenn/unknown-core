import("//unknown/components/ai_chat/core/common/buildflags/buildflags.gni")

assert(enable_ai_chat)

source_set("ai_chat") {
  sources = [
    "ai_chat_ui.cc",
    "ai_chat_ui.h",
    "ai_chat_ui_page_handler.cc",
    "ai_chat_ui_page_handler.h",
    "ai_chat_untrusted_conversation_ui.cc",
    "ai_chat_untrusted_conversation_ui.h",
    "code_sandbox_ui.cc",
    "code_sandbox_ui.h",
  ]

  deps = [
    "//unknown/browser/ai_chat",
    "//unknown/browser/ai_chat/ollama",
    "//unknown/browser/misc_metrics",
    "//unknown/common:webui_url_constants",
    "//unknown/components/ai_chat/content/browser",
    "//unknown/components/ai_chat/core/browser",
    "//unknown/components/ai_chat/core/browser/ollama",
    "//unknown/components/ai_chat/core/common",
    "//unknown/components/ai_chat/core/common/buildflags",
    "//unknown/components/ai_chat/core/common/mojom",
    "//unknown/components/ai_chat/resources",
    "//unknown/components/ai_chat/resources/custom_site_distiller_scripts:generated_resources",
    "//unknown/components/resources:strings_grit",
    "//chrome/browser/favicon",
    "//chrome/browser/history",
    "//chrome/browser/profiles:profile",
    "//components/favicon/core",
    "//components/prefs",
    "//components/strings:components_strings",
    "//components/user_prefs",
    "//content/public/browser",
    "//ui/webui",
  ]

  if (!is_android) {
    deps += [
      "//chrome/browser/ui/tabs:tab_model",
      "//chrome/browser/ui/thumbnails",
      "//chrome/browser/ui/webui/top_chrome",
      "//chrome/browser/ui/webui/util",
    ]
  } else {
    deps += [ "//chrome/browser/ui/android/tab_model" ]
  }

  if (enable_brave_ai_chat_agent_profile) {
    sources += [
      "ai_chat_agent_new_tab_page_ui.cc",
      "ai_chat_agent_new_tab_page_ui.h",
    ]
    public_deps = [ "//unknown/browser/ai_chat:ai_chat_agent_profile" ]
    deps += [
      "//unknown/browser/resources/ai_chat_agent_new_tab_page:pack_js_resources",
      "//unknown/browser/resources/ai_chat_agent_new_tab_page:pack_static_resources",
    ]
  }
}

source_set("unit_tests") {
  testonly = true

  deps = [
    ":ai_chat",
    "//unknown/browser/ai_chat",
    "//unknown/components/ai_chat/content/browser",
    "//unknown/components/ai_chat/core/browser",
    "//unknown/components/ai_chat/core/common",
    "//unknown/components/ai_chat/core/common/mojom",
    "//chrome/test:test_support",
    "//content/test:test_support",
    "//testing/gtest",
  ]

  sources = [ "ai_chat_ui_page_handler_unittest.cc" ]
}

source_set("browser_tests") {
  testonly = true
  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  deps = [
    ":ai_chat",
    "//unknown/browser/ai_chat",
    "//unknown/components/ai_chat/core/browser",
    "//unknown/components/ai_chat/core/common",
    "//unknown/components/ai_chat/core/common/mojom",
    "//chrome/browser/profiles:profile",
    "//chrome/browser/ui",
    "//chrome/test",
    "//chrome/test:test_support",
  ]

  sources = [ "ai_chat_ui_page_handler_browsertest.cc" ]
}
