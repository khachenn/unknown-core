import("//unknown/components/common/typescript.gni")
import("//unknown/components/speedreader/common/buildflags/buildflags.gni")

assert(enable_speedreader)

transpile_web_ui("brave_speedreader_toolbar_ui") {
  output_module = false
  entry_points = [ [
        "speedreader_toolbar",
        rebase_path("speedreader_toolbar.tsx"),
      ] ]
  resource_name = "brave_speedreader_toolbar"
  deps = [ "//unknown/components/speedreader/common:mojom_js" ]
  imports_from = [ "//unknown/components/speedreader/resources/" ]
}

pack_web_resources("generated_resources") {
  resource_name = "brave_speedreader_toolbar"
  output_dir = "$root_gen_dir/unknown/components/speedreader/resources/panel"
  deps = [ ":brave_speedreader_toolbar_ui" ]
}
