static_library("skus") {
  sources = [
    "//unknown/browser/skus/skus_service_factory.cc",
    "//unknown/browser/skus/skus_service_factory.h",
  ]

  deps = [
    "//base",
    "//unknown/components/skus/browser",
    "//unknown/components/skus/common",
    "//unknown/components/skus/common:mojom",
    "//chrome/browser:browser_process",
    "//chrome/browser/profiles:profile",
    "//components/keyed_service/content",
    "//components/pref_registry",
    "//components/user_prefs",
    "//content/public/browser",
  ]

  if (is_android) {
    sources +=
        [ "//unknown/browser/skus/android/skus_service_factory_android.cc" ]
    deps += [ "//unknown/browser/skus/android:jni_headers" ]
  }
}
